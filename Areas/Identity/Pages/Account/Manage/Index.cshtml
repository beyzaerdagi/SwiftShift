@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
<style>
     .profileImg {
            padding: 2px;
            margin: 6px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
            margin-left: 50px;
            cursor: pointer;
        }

            .profileImg:hover {
                background-color: cadetblue;
            }
</style>
<script>
    function showFileInput() {
        document.getElementById('fileInput').click();
    }
</script>
<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.Country"></label>
                    <select asp-for="Input.Country" asp-items="@(Model.Countries)" class="form-control"></select>
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Input.City"></label>
                    <select asp-for="Input.City" asp-items="@(Model.Cities)" class="form-control"></select>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Input.District"></label>
                    <select asp-for="Input.District" asp-items="@(Model.District)" class="form-control"></select>
                    <span asp-validation-for="Input.District" class="text-danger"></span>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
            <div class="col-md-6">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="profileImg" onclick="showFileInput()">
                    <label asp-for="Input.ProfilePicture" style="width:100%;"></label>
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" style="width:200px;height:200px;cursor:pointer; object-fit:cover" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                    }
                    else
                    {
                        <img id="profilePicture" style="width:200px;height:200px;cursor:pointer; object-fit:cover" src="~/images/profilePicture.png">
                    }
                </div>
                <div>
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="Input.ProfilePicture"
                           class="form-control"
                           id="fileInput"
                           style="display:none;"
                           onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
