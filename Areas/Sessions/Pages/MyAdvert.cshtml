    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js"></script>
    <link rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css'></link>
    @section scripts {
        <script type="text/javascript">

            var selectedFromCountryId;
            var selectedToCountryId;
            var selectedFromCityId;
            var selectedToCityId;

            function formatDate(dateString) {
                var date = new Date(dateString);
                var day = date.getDate().toString().padStart(2, '0');
                var month = (date.getMonth() + 1).toString().padStart(2, '0');
                var year = date.getFullYear();
                return day + '/' + month + '/' + year;
            }

            function Modal_Kapat() {
                $('#ModalAdvert').modal('hide');
            }

            function populateCities(selectedCountryId, dropDownId) {
                $.ajax({
                    type: 'GET',
                    url: '/Sessions/MyAdvert?handler=Cities',
                    data: { countryId: selectedCountryId },
                    success: function(cities) {
                        var cityDropdown = $(dropDownId);
                        $.each(cities, function(i, city) {
                            cityDropdown.append($("<option></option>").val(this['value']).html(this['text']));
                        });
                    },
                    error: function() {
                        console.error('Error fetching cities');
                    }
                });
            }

            function populateDistrict(selectedCityId, dropDownId) {
                $.ajax({
                    type: 'GET',
                    url: '/Sessions/MyAdvert?handler=District',
                    data: { cityId: selectedCityId },
                    success: function(cities) {
                        var districtDropdown = $(dropDownId);
                        $.each(cities, function(i, district) {
                            districtDropdown.append($("<option></option>").val(this['value']).html(this['text']));
                        });
                    },
                    error: function() {
                        console.error('Error fetching cities');
                    }
                });
            }

            function Modal_Guncelle() {
                var formData = {
                    productId: $('#productId').text(),
                    productName: $('#productName').val(),
                    productKg: $('#productKg').val(),
                    fromCountryId: selectedFromCountryId,
                    fromCityId: selectedFromCityId,
                    fromDistrictId: $('#ddlFromDistrict').val(),
                    toCountryId: selectedToCountryId,
                    toCityId: selectedToCityId,
                    toDistrictId: $('#ddlToDistrict').val(),
                    whenDate: $('#whenDate').val(),
                    address: $('#address').val(),
                    productNote: $('#note').val()
                };

                $.ajax({
                    type: 'POST',
                    url: '/Sessions/MyAdvert?handler=UpdateAdvert',
                    contentType: 'application/json; charset=utf-8',
                    data: JSON.stringify(formData),
                    dataType: "json",
                    headers:
                    {
                        "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        swal({
                            title: "Güncelleme",
                            text: "İlan Başarılı Bir Şekilde Güncellenmiştir!",
                            icon: "success",
                            button: true
                        }).then(function() {
                            location.reload(true);
                        });

                        Modal_Kapat();
                    },
                    error: function(xhr, status, error) {
                        console.error('Error updating data:', error);
                    }
                });
            }

            $(function() {
                flatpickr(".datepicker", {
                    dateFormat: "d/m/Y",
                    minDate: "today"
                });

                $('.prdctDel').on('click', function() {
                    debugger;
                    $.ajax({
                        type: 'POST',
                        url: '/Sessions/MyAdvert?handler=DeleteAdvert',
                        contentType: 'application/x-www-form-urlencoded',
                        data: { "id": $(this).data('id') },
                        dataType: "json",
                        headers:
                        {
                            "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                        },
                        success: function(response) {
                            swal({
                                title: "Silme",
                                text: "İlan Başarılı Bir Şekilde Silinmiştir!",
                                icon: "success",
                                button: true
                            }).then(function() {
                                location.reload(true);
                            });
                            Modal_Kapat();
                        },
                        error: function(xhr, status, error) {
                            console.error('Error updating data:', error);
                        }
                    });
                });

                $('.prdctEdit').on('click', function() {
                    $.ajax({
                        type: "GET",
                        url: "/Sessions/MyAdvert?handler=AjaxMethod",
                        data: { "id": $(this).data('id') },
                        contentType: 'application/x-www-form-urlencoded',
                        dataType: "json",
                        headers:
                        {
                            "RequestVerificationToken": $('input:hidden[name="__RequestVerificationToken"]').val()
                        },
                        success: function(advert) {
                            $('#productId').text(advert.productId);
                            $('#productName').val(advert.productName);
                            $('#productKg').val(advert.productKg)
                            $('#whenDate').val(formatDate(advert.whenDate));
                            $('#address').val(advert.address);
                            $('#note').val(advert.productNote);

                            var fromCountryDropdown = $('#ddlFromCountries');
                            fromCountryDropdown.empty();
                            selectedFromCountryId = advert.fromCountryId;
                            fromCountryDropdown.append($('<option>').val(selectedFromCountryId).text(advert.fromCountry.countryName).attr('selected', 'selected'));

                            var fromCityDropdown = $('#ddlFromCities');
                            fromCityDropdown.empty();
                            selectedFromCityId = advert.fromCityId;
                            fromCityDropdown.append($('<option>').val(selectedFromCityId).text(advert.fromCity.cityName).attr('selected', 'selected'));

                            var fromDistrictDropdown = $('#ddlFromDistrict');
                            fromDistrictDropdown.empty();
                            var selectedFromDistrictId = advert.fromDistrictId;
                            fromDistrictDropdown.append($('<option>').val(selectedFromDistrictId).text(advert.fromDistrict.districtName).attr('selected', 'selected'));

                            var toCountryDropdown = $('#ddlToCountries');
                            toCountryDropdown.empty();
                            selectedToCountryId = advert.toCountryId;
                            toCountryDropdown.append($('<option>').val(selectedToCountryId).text(advert.toCountry.countryName).attr('selected', 'selected'));

                            var toCityDropdown = $('#ddlToCities');
                            toCityDropdown.empty();
                            selectedToCityId = advert.toCityId;
                            toCityDropdown.append($('<option>').val(selectedToCityId).text(advert.toCity.cityName).attr('selected', 'selected'));

                            var toDistrictDropdown = $('#ddlToDistrict');
                            toDistrictDropdown.empty();
                            var selectedToDistrictId = advert.toDistrictId;
                            toDistrictDropdown.append($('<option>').val(selectedToDistrictId).text(advert.toDistrict.districtName).attr('selected', 'selected'));

                            $('#ModalAdvert').modal('show');
                        },
                        error: function() {
                            console.error('Error fetching data');
                        }
                    });
                });

                $('#ddlFromCities').on('click', function() {
                    populateCities(selectedFromCountryId, '#ddlFromCities');
                    selectedFromCityId = $(this).val();
                    var districtDropdown = $('#ddlFromDistrict');
                    districtDropdown.empty().append('<option selected="selected" value="0">Seçiniz</option>');
                });

                $('#ddlToCities').on('click', function() {
                    populateCities(selectedToCountryId, '#ddlToCities');
                    selectedToCityId = $(this).val();
                    var districtDropdown = $('#ddlToDistrict');
                    districtDropdown.empty().append('<option selected="selected" value="0">Seçiniz</option>');
                });

                $('#ddlFromDistrict').on('click', function() {
                    populateDistrict(selectedFromCityId, '#ddlFromDistrict')
                });

                $('#ddlToDistrict').on('click', function() {
                    populateDistrict(selectedToCityId, '#ddlToDistrict')
                });
            });

            $(document).ready(function() {
                debugger;
                if (@Model.UserAdverts.Count == 0) {
                    swal({
                        title: "Uyarı!",
                        text: "İlanınız Bulunmamaktadır!",
                        icon: "warning",
                        button: "İlan Ekle"
                    }).then(function() {
                        window.location = "/Product/Advert";
                    });
                }
            });
        </script>
    }
    </head>
    <body>
        <header class="w3-display-container w3-wide">
            <div class="container">
                <div class="row">
                    @if (Model.UserAdverts.Count != 0)
                {
                    @foreach (var advert in Model.UserAdverts)
                    {
                        <div class="animated-card col-md-4">
                            <div class="card">
                                @if (@advert.ProductImage == null)
                                {
                                    <img src="~/images/delivery.jpg" alt="Product Image" data-toggle="modal" data-target="#exampleModal" />
                                }
                                else
                                {
                                    <img src="data:image/*;base64,@(Convert.ToBase64String(@advert.ProductImage))" alt="Product Image" data-toggle="modal" data-target="#exampleModal" />
                                }
                                <h2>
                                    @advert.ProductName
                                </h2>
                                <p class="card-text">
                                    <strong>Kilogram:</strong> @advert.ProductKg <br />
                                    <strong>Ürünün Bulunduğu Yer:</strong> @advert.FromDistrict.DistrictName/ @advert.FromCity.CityName/ @advert.FromCountry.CountryName <br />
                                    <strong>Ürünün Gideceği Yer:</strong> @advert.ToDistrict.DistrictName/ @advert.ToCity.CityName/ @advert.ToCountry.CountryName <br />
                                    <strong>Adres:</strong> @advert.Address <br />
                                    <strong>Gideceği Tarih:</strong> @advert.WhenDate.ToString("dd/MM/yyyy") <br />
                                    <strong>Not:</strong> @advert.ProductNote
                                </p>
                                <div class="button-container">
                                    @if (advert.isOrder == 0)
                                    {
                                        <button class="prdctEdit" type="button" data-id="@advert.ProductId">Düzenle</button>
                                        <button class="prdctDel" type="button" data-id="@advert.ProductId">Sil</button>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </header>
    <div class="modal fade" id="ModalAdvert" tabindex="-1" aria-labelledby="ModalAdvertLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col">
                                <span class="modal-title lead"><strong>İlan</strong></span>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <span hidden id="productId"></span>
                    @Html.AntiForgeryToken()
                    <div>
                        <label class="fw-bold">Ürün İsmi:</label>
                        <br />
                        <input type="text" id="productName" class="form-control">
                    </div>
                    <div>
                        <label class="fw-bold">Kilogram:</label>
                        <br />
                        <input type="number" id="productKg" class="form-control">
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Bulunduğu Ülke:</label>
                        <br />
                        <select id="ddlFromCountries" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Bulunduğu Şehir:</label>
                        <br />
                        <select id="ddlFromCities" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Bulunduğu İlçe:</label>
                        <br />
                        <select id="ddlFromDistrict" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Gideceği Ülke:</label>
                        <br />
                        <select id="ddlToCountries" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Gideceği Şehir:</label>
                        <br />
                        <select id="ddlToCities" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Ürünün Gideceği İlçe:</label>
                        <br />
                        <select id="ddlToDistrict" class="form-control">
                        </select>
                    </div>
                    <div>
                        <label class="fw-bold">Adres:</label>
                        <br />
                        <input type="text" id="address" class="form-control">
                    </div>
                    <div>
                        <label class="fw-bold">Gideceği Tarih:</label>
                        <br />
                        <input type="text" id="whenDate" class="datepicker form-control">
                    </div>
                    <div>
                        <label class="fw-bold">Not:</label>
                        <br />
                        <input type="text" id="note" class="form-control">
                    </div>
                </div>
                <div class="modal-footer">
                    <div class="container-fluid">
                        <div class="row d-flex justify-content-end">
                            <div class="col-auto">
                                <input type="button" class="px-4 btn btn-sm btn-warning" onclick="Modal_Guncelle()" value="Güncelle" />
                                <input type="button" class="px-4 btn btn-sm btn-danger" onclick="Modal_Kapat()" value="Kapat" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ürün Resmi</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- You can customize the content of the modal here -->
                    <img src="~/images/profilePicture.png" alt="Product Image" class="img-fluid" />
                    <!-- Other details or additional information can be added here -->
                </div>
            </div>
        </div>
    </div>
</body>
</html>