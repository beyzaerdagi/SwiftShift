@using Bitirme.Views.Main
@using Microsoft.AspNetCore.Identity
@using Bitirme.Areas.Identity.Data
@model IEnumerable<Bitirme.Models.Explore>
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @{
        ViewData["Title"] = "Explore";
    }
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bitirme.styles.css" asp-append-version="true" />
    <style>
        .product-card {
            background-color: #fff; /* Kart arkaplan rengi */
            border: 1px solid #ddd; /* Kart kenarlık rengi ve kalınlığı */
            border-radius: 8px; /* Kart köşe yuvarlaklığı */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Kart gölgesi */
            overflow: hidden; /* İçerik dışına taşan kısımları gizle */
            margin: 20px; /* Kart arasındaki boşluk */
            max-width: 400px; /* Kartın maksimum genişliği */
            min-height: 340px;
        }

        .btn-get-contact {
            text-align: center;
            background-color: #4caf50;
            color: white;
            padding: 6px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .card-header {
            background-color: whitesmoke;
            padding: 10px;
        }
    </style>
</head>
<body>
    <header class="w3-display-container w3-wide">
        <div class="container">
            <div class="row">
                @foreach (var explore in Model)
                {
                    <div class="col-md-4">
                        <div class="product-card">
                            <div class="card-header">
                                <h5 class="card-title">İlan Detayları</h5>
                            </div>
                            <div class="form-group col-md-6">
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>Ürün İsmi:</strong> @explore.ProductName</p>
                                <p class="card-text"><strong>Ülke:</strong> @explore.Country</p>
                                <p class="card-text"><strong>Şehir:</strong> @explore.City</p>
                                <p class="card-text"><strong>Adres:</strong> @explore.Address</p>
                                <p class="card-text"><strong>Kilogram:</strong> @explore.ProductKg</p>
                                <p class="card-text"><strong>Not:</strong> @explore.Note</p>
                            </div>
                            <div class="get-contact">
                                <a class="btn-get-contact" asp-controller="Main" asp-action="Message">İletişim Kur</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </header>
</body>
</html>
