@using Microsoft.AspNetCore.Identity
@using Bitirme.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
<script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>

<style>
    .rounded-circle {
        height: 50px;
    }
    li.nav-item {
   margin:0 0 10px 0;   
}
</style>

<ul class="navbar-nav" style="text-align:center">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            <form class="form-inline" method="get" asp-controller="Main" asp-action="Search">
                <div class="col-auto">
                    <input type="text" class="form-control" placeholder="Search" name="query">
                    <div class="col-auto">
                        <button class="btn btn-outline-secondary" type="submit">Search</button>
                    </div>
                </div>
            </form>
        </li>
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            <div class="nav">
                <a asp-controller="Main" asp-action="Explore">Keşfet</a>
            </div>
        </li>
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            <div class="nav">
                <a asp-controller="Main" asp-action="Advert">İlan Ekle</a>
            </div>
        </li>
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            <div class="nav">
                <a asp-controller="Main" asp-action="Order">Siparişlerim</a>
            </div>
        </li>
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            <div class="nav">
                <a asp-controller="Main" asp-action="Message">Mesaj Kutusu</a>
            </div>
        </li>
        <li class="nav-item" style="align-self: center;margin-right: 80px;">
            @if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
            {
                <div class="dropdown">
                    <button type="button" class="border-0 rounded-circle" data-toggle="dropdown" style="height:60px">
                        <img class="rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))">
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-controller="Main" asp-action="Profile">Profilim</a>
                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profili Düzenle</a>
                        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button id="logout" type="submit" class="dropdown-item">Logout</button>
                        </form>
                    </div>
                </div>
            }
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
