<script>
    function sendOffer() {
        var offerAmount = $('#offerAmount').val();
        var senderUserName = '@senderUserName';
        var receiverUserName = '@receiverUserName';
        var senderUserId = '@senderUserID';
        var receiverUserId = '@receiverUserID';
        var chatId = '@chatId';
        var productId = '@productId';
        var travelId = '@travelId';

        $.ajax({
            type: 'POST',
            url: '/Home/SendOfferMessage',
            data: {
                offerAmount: offerAmount,
                senderUserName: senderUserName,
                receiverUserName: receiverUserName,
                receiverUserId: receiverUserId,
                senderUserId: senderUserId,
                chatId: chatId,
                productId: productId,
                travelId: travelId
            },
            success: function(response) {
                swal({
                    title: "İşlem Başarılı",
                    text: "Teklif Başarıyla Gönderildi.",
                    icon: "success",
                    button: true
                }).then(function() {
                    location.reload(true);
                });
                console.log('Teklif gönderildi.');
            },
            error: function(xhr, status, error) {
                console.error('Teklif gönderilirken bir hata oluştu:', error);
            }
        });

        $('#offerModal').modal('hide');
    }

    function acceptOffer() {
        var offerAmount = '@getOfferAmount';
        var senderUserName = '@senderUserName';
        var receiverUserName = '@receiverUserName';
        var senderUserId = '@senderUserID';
        var receiverUserId = '@receiverUserID';
        var productId = '@productId';
        var travelId = '@travelId';
        var chatId = '@chatId';

        $.ajax({
            type: 'POST',
            url: '/Home/AcceptOfferMessage',
            data: {
                offerAmount: offerAmount,
                senderUserName: senderUserName,
                receiverUserName: receiverUserName,
                receiverUserId: receiverUserId,
                senderUserId: senderUserId,
                productId: productId,
                travelId: travelId,
                chatId: chatId
            },
            success: function(response) {
                swal({
                    title: "İşlem Başarılı",
                    text: "Teklif Başarıyla Kabul Edildi.",
                    icon: "success",
                    button: true
                }).then(function() {
                    location.reload(true);
                });
                console.log('Teklif gönderildi.');
            },
            error: function(xhr, status, error) {
                console.error('Teklif gönderilirken bir hata oluştu:', error);
            }
        });

        $('#offerModal').modal('hide');
    }
    function rejectOffer() {
        var offerAmount = '@getOfferAmount';
        var senderUserName = '@senderUserName';
        var receiverUserName = '@receiverUserName';
        var senderUserId = '@senderUserID';
        var receiverUserId = '@receiverUserID';
        var chatId = '@chatId';
        var productId = '@productId';
        var travelId = '@travelId';

        $.ajax({
            type: 'POST',
            url: '/Home/RejectOfferMessage',
            data: {
                offerAmount: offerAmount,
                senderUserName: senderUserName,
                receiverUserName: receiverUserName,
                receiverUserId: receiverUserId,
                senderUserId: senderUserId,
                chatId: chatId,
                productId: productId,
                travelId: travelId
            },
            success: function(response) {
                swal({
                    title: "İşlem Başarılı",
                    text: "Teklif Başarıyla Reddedildi.",
                    icon: "success",
                    button: true
                }).then(function() {
                    location.reload(true);
                });
                console.log('Teklif gönderildi.');
            },
            error: function(xhr, status, error) {
                console.error('Teklif gönderilirken bir hata oluştu:', error);
            }
        });

        $('#offerModal').modal('hide');
    }

    function openProductTravelInfo() {
        var productId = '@productId';
        var travelId = '@travelId';

        $.ajax({
            url: '@Url.Action("GetProductTravelInfo", "Home")',
            type: 'GET',
            data: {
                productId: productId,
                travelId: travelId,
            },
            success: function(response) {
                swal({
                    title: "Bilgilendirme!",
                    text: response,
                    icon: "info",
                    button: "Tamam",
                    closeOnClickOutside: false,
                    closeOnEsc: false
                })
            },
            error: function(response) {
                alert(response.responseText);
            }
        });
    }

    function finishChat() {
        var chatId = '@chatId';

        swal({
            title: "Sohbeti Sonlandırmak İstediğinizden Emin Misiniz?",
            text: "Onayladığınız takdirde ilgili kişi ile alışverişiniz sonlanacaktır.",
            icon: "warning",
            buttons: {
                cancel: {
                    text: "Vazgeç",
                    value: null,
                    visible: true,
                    closeModal: true,
                },
                confirm: {
                    text: "Sonlandır",
                    value: true,
                    visible: true,
                    closeModal: false
                }
            },
            dangerMode: true,
        })
            .then((willClose) => {
                if (willClose) {
                    $.ajax({
                        type: "GET",
                        url: "@Url.Action("GetFinishChat", "Home")",
                        data: { chatId: chatId },
                        success: function(response) {
                            swal({
                                title: "İşlem Başarılı",
                                text: "Sohbet başarıyla sonlandırıldı.",
                                icon: "success",
                                button: true
                            }).then(function() {
                                location.reload(true);
                            });
                        },
                        error: function(xhr, status, error) {
                            swal("Hata!", "Bir hata oluştu: " + error, "error");
                        }
                    });
                } else {
                    console.log("İşlem iptal edildi");
                }
            });
    }

</script>
