<div class="row">
    <div id="map"></div>
    <script>
        var map;
        function initMap()
        {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 41.013000, lng: 28.974800 },
                zoom: 8
            });

            $.get("@Url.Action("GetAllLocation", "Home")", function (data)
            {
                debugger;
                var marker = [];
                var contentString = [];
                var infowindow = [];

                for (var i = 0; i < data.length; i++)
                {
                    console.log(data[i].ad)
                    console.log(typeof data[i].latitude)
                    marker[i]= new google.maps.Marker({
                        position: { lat: parseFloat(data[i].latitude), lng: parseFloat(data[i].longitude) },
                        map: map
                    });

                    contentString[i] = '<div id="content">' +
                        '<div id="siteNotice">' +
                        '</div>' +
                        '<h1 id="firstHeading" class="firstHeading">Test</h1>' +
                        '<div id="bodyContent">' +
                        '<p>Test</p>';

                    infowindow[i] = new google.maps.InfoWindow({
                        content: contentString[i]
                    });
                    marker[i].addListener('mouseover', function ()
                    {
                        infowindow[i].open(map, marker[i]);
                    });
                }

            })

        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCY8T6t2s5mXZsmfTmbuoUULhZ1Rnn-wgA&callback=initMap">
    </script>
</div>