@model IEnumerable<Bitirme.Models.Product>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bitirme.styles.css" asp-append-version="true" />
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        section {
            top: 0;
            bottom: 0;
            left: 0;
            right: 0;
            margin-top: 20px;
            text-align: center;
        }

        /* .product-form {
                            width: 550px;
                            height: 350px;
                            background-color: #fff;
                            padding: 20px;
                            border-radius: 8px;
                            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
                            margin: auto;
                            position: absolute;
                            top: 0;
                            bottom: 0;
                            left: 0;
                            right: 0;
                            text-align: center;
                }*/

        h2 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin: 10px 0;
            color: #555;
        }

        .address,
        .product-name,
        .product-add,
        .country,
        .city,
        .product-note,
        .product-kg {
            width: 250px;
            padding: 2px;
            margin: 6px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
        }

        .productImg {
            padding: 2px;
            margin: 6px 0;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
            margin-left: 50px;
            cursor: pointer;
        }

            .productImg:hover {
                background-color: cadetblue;
            }

        .country,
        .city,
        .product-kg {
            cursor: pointer;
        }

        .product-note {
            resize: vertical;
            padding: 2px;
        }

        .product-add-container {
            margin-top: 20px;
            text-align: center;
        }


        input {
            text-align: center;
        }

        .product-add {
            text-align: center;
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .product-add:hover {
                background-color: #45a049;
            }
    </style>
    <script>
        function showFileInput() {
            document.getElementById('fileInput').click();
        }
    </script>
</head>
<body>
    <h1>İlan Ekle</h1>
    <section>
        @using (Html.BeginForm("Advert", "Product"))
        {
            <form id="productForm" class="product-form" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="col-md-3">
                        <label>Ürün İsmi:</label>
                        <input class="product-name" type="text" name="productName" /> <br>
                        <label>Ülke:</label>
                        <select class="country" name="countryId">
                            @foreach (var country in ViewBag.Countries)
                            {
                                <option value="@country.Value">@country.Text</option>
                            }
                        </select>
                        <label>Adres:</label>
                        <input class="address" type="text" name="address" /> <br>
                    </div>
                    <div>
                        <label>Ürün Ağırlığı (kg):</label>
                        <input class="product-kg" type="text" name="productKg" /> <br>
                        <label>Şehir:</label>
                        <select class="city" name="cityId">
                            @foreach (var city in ViewBag.Cities)
                            {
                                <option value="@city.Value">@city.Text</option>
                            }
                        </select>
                        <label>Ürün Notu:</label>
                        <input class="product-note" type="text" name="productNote" /> <br>
                    </div>
                    <div>
                        <label>Ürün Resmi:</label>
                        <div class="productImg" onclick="showFileInput()">
                            <img id="productImage" style="width:200px;height:200px; object-fit:cover" src="~/images/profilePicture.png">
                        </div>
                    </div>
                    <div>
                        <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           id="fileInput"
                           style="display: none;"
                           onchange="document.getElementById('productImage').src = window.URL.createObjectURL(this.files[0])"
                           class="product-image" name="productImage" />
                    </div>
                </div>
                <div class="product-add-container">
                    <input class="product-add" type="submit" value="Ekle" />
                </div>
            </form>
        }
    </section>
</body>
</html>
