@using Microsoft.AspNetCore.Identity
@using Bitirme.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bitirme.styles.css" asp-append-version="true" />

    <style>
        body {
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .cover-photo {
            background-color: #6B705C;
            height: 350px;
            width: 100%;
        }

        .circle {
            position: absolute;
            top: 70%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 150px;
            height: 150px;
            clip-path: circle(50% at 50% 50%);
            overflow: hidden;
        }

        .form-group {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 150px; /* Same as circle width */
            height: 150px; /* Same as circle height */
        }

        #profilePicture {
            height: 100%;
            object-fit: cover;
        }

        .form-group img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* This property makes the image cover the entire container while maintaining its aspect ratio */
            border-radius: 50%; /* Ensure the image also has a circular border */
        }

        .user-info,
        .point,
        .description {
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            text-align: center;
        }

        .user-info {
            top: 82%;
            font-size: 1.5em; /* Adjust the font size as needed */
        }

        .point {
            top: 80%;
            font-size: 1em; /* Adjust the font size as needed */
        }

        .description {
            top: 140%;
            font-size: 0.7em; /* Adjust the font size as needed */
        }

        .info {
            top: 100%;
            left: 50%;
            position: absolute;
            transform: translateX(-50%);
            text-align: center;
            display: flex;
            justify-content: space-between;
        }

        #btnMsg {
            top: 110%;
            text-align: center;
            left: 50%;
            position: absolute;
            transform: translateX(-50%);
        }

        .reviews-container {
            top: 120%;
            display: flex;
            flex-wrap: wrap;
            gap: 10px; /* Kartlar arasındaki boşluğu ayarlar */
        }

        .card-comment {
            top: 120%;
            position: absolute;
            left: 50%;
            transform: translateX(-50%);
            width: 400px; /* Kart genişliği */
            height: 200px; /* Kart yüksekliği */
            border: 1px solid #ddd; /* Kart sınırlarını ekler */
            border-radius: 8px; /* Kart kenar yuvarlama */
            overflow: hidden; /* İçeriğin kart sınırlarını aşmasını önler */
        }

        th, td {
            flex: 1;
            padding: 8px;
            text-align: center;
        }

            th:nth-child(1),
            td:nth-child(1),
            th:nth-child(2),
            td:nth-child(2) {
                border-right: 1px solid black;
            }

            th:nth-child(2),
            td:nth-child(2) {
                border-right: 1px solid black;
            }

    </style>
</head>
<body>
    <header class="w3-display-container w3-wide">
        <div class="w3-row w3-padding w3-border">
            <div class="cover-photo">
                <div class="circle">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        @if (UserManager.GetUserAsync(User).Result.ProfilePicture != null)
                        {
                            <img class="rounded-circle" src="data:image/*;base64,@(Convert.ToBase64String(UserManager.GetUserAsync(User).Result.ProfilePicture))">
                        }
                        else
                        {
                            <img class="rounded-circle" src="~/images/profilePicture.png">
                        }
                    </div>
                </div>
            </div>
            <div class="user-info">
                <h1>@(UserManager.GetUserAsync(User).Result.Ad) @(UserManager.GetUserAsync(User).Result.Soyad)</h1>
                <h1 class="point">@(UserManager.GetUserAsync(User).Result.Point == null ? 0 : UserManager.GetUserAsync(User).Result.Point)/ 10</h1>
                <h1 class="description">@(UserManager.GetUserAsync(User).Result.ProfileDescription)</h1>
            </div>
            <table class="info">
                <th>@(UserManager.GetUserAsync(User).Result.TransportNumber)</th>
                <th>@(UserManager.GetUserAsync(User).Result.AdvertNumber)</th>
                <th>@(UserManager.GetUserAsync(User).Result.DeliverNumber)</th>
                <tr>
                    <td>Taşıma Sayısı</td>
                    <td>İlan Sayısı</td>
                    <td>Teslim Edilecekler</td>
                </tr>
            </table>
            <a id="btnMsg" class="btn btn-primary mt-3" asp-controller="Main" asp-action="Message">Mesaj</a>
            <div class="reviews-container">
                <div class="card-comment">
                    <div class="card-header">
                        <h5 class="card-title">Title</h5>
                    </div>
                    <div class="card-body">
                        <p class="card-text">By: UserName</p>
                        <p class="card-text">Rating: Rating stars</p>
                        <p class="card-text">Date </p>
                    </div>
                </div>
            </div>
        </div>
    </header>
</body>
</html>
