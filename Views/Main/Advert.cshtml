                        <label asp-for="Input.City"></label>
                        <select asp-for="Input.City" asp-items="@(Model.Cities)" class="form-control"></select>
                        <span asp-validation-for="Input.City" class="text-danger"></span>
                    </div>
                </div>*@
            </div>
            <div class="col-md-6">
                <div>
                    <label asp-for="Input.Address"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.ProductKg"></label>
                    <input asp-for="Input.ProductKg" class="form-control" />
                    <span asp-validation-for="Input.ProductKg" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="Input.ProductNote"></label>
                    <input asp-for="Input.ProductNote" class="form-control" />
                    <span asp-validation-for="Input.ProductNote" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
    <div class="product-add-container">
        <a class="product-add" asp-controller="Main" asp-action="Explore">Ekle</a>
    </div>

