@using Microsoft.AspNetCore.Identity
@using Bitirme.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
</html>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Bitirme.styles.css" asp-append-version="true" />
    <title>İlan Ekle</title>
    <style>
        .product-form {
            width: 550px;
            height: 350px;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: auto; /* Center horizontally */
            position: absolute; /* Center vertically */
            top: 0;
            bottom: 0;
            left: 0;
            right: 0; /* Center vertically */
            text-align: center;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        label {
            display: block;
            margin: 10px 0;
            color: #555;
        }

        .address, .product-name, .product-add, .country, .city, .product-note, .product-kg {
            width: 150px;
            padding: 2px;
            margin: 6px 0;
            box-sizing: border-box;
            border: 1px solid #ccc;
            border-radius: 4px;
            text-align: center;
        }

        .country, .city, .product-kg {
            cursor: pointer;
        }

        .product-note {
            resize: vertical;
            padding: 2px;
        }

        .product-add-container {
            margin-top: 420px;
            text-align: center;
        }

        .product-add {
            text-align: center;
            background-color: #4caf50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            .product-add:hover {
                background-color: #45a049;
            }
    </style>
</head>
<body>
    <form class="product-form" method="post" action="SubmitForm">
        <!-- Formun gönderileceği controller ve action belirtilmelidir -->
        <div class="row">
            <div class="col-md-6">
                <div>
                    <label>Ürün İsmi:</label>
                    <input class="product-name" type="text" name="productName" required />
                </div>
                <div>
                    <label>Ülke:</label>
                    <select class="country" name="country" id="country" onchange="populateCities()">
                        <option value="turkey">Turkiye@(UserManager.GetUserAsync(User).Result.Country)</option>
                        <!-- Diğer ülkeler buraya eklenebilir -->
                    </select>
                </div>
                <div>
                    <label>Şehir:</label>
                    <select class="city" name="city" id="city" required>
                        <option>Ankara@(UserManager.GetUserAsync(User).Result.City)</option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
                <div>
                    <label>Adres:</label>
                    <input class="address" type="text" name="address" required />
                </div>
                <div>
                    <label>Kilogram:</label>
                    <select class="product-kg" name="weight">
                        <option value="1">1 kg</option>
                        <option value="2">2 kg</option>
                        <!-- Diğer kilogram miktarları buraya eklenebilir -->
                    </select>
                </div>

                <div>
                    <label>Not:</label>
                    <textarea class="product-note" name="note" rows="1" cols="50"></textarea>
                </div>
            </div>
        </div>
    </form>
    <div class="product-add-container">
        <a class="product-add" asp-controller="Main" asp-action="Explore">Ekle</a>
    </div>

    <script>
        function populateCities() {
            var country = document.getElementById("country").value;
            var cityDropdown = document.getElementById("city");

            // Şehirleri ülkeye göre dinamik olarak değiştir
            // Bu verileri dinamik olarak bir veritabanından çekebilirsiniz.
            if (country === "turkey") {
                cityDropdown.innerHTML = "<option value='istanbul'>İstanbul</option><option value='ankara'>Ankara</option><option value='izmir'>İzmir</option>";
            } else {
                // Diğer ülkelerin şehirleri buraya eklenecek
                cityDropdown.innerHTML = ""; // Başka bir ülke seçildiğinde şehirleri sıfırla
            }
        }
    </script>

</body>
</html>

